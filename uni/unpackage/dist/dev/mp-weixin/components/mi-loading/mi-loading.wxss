.show-loading-con {
  height: 100vh;
  width: 100%;
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
}
.show-loading-con .content {
  position: absolute;
  top: 50%;
  left: 50%;
  bottom: 0px;
  right: 0px;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  color: #fff;
  width: 7rem;
  height: 4.5rem;
  background: rgba(0, 0, 0, 0.7);
  border-radius: .3rem;
  font-size: .9rem;
}
.show-loading-con .content image {
  width: 1.5rem;
  height: 1.5rem;
  margin-bottom: .5rem;
}
.show-loading-con .content .title {
  max-width: 5rem;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.mask {
  background: rgba(0, 0, 0, 0.3);
}

